@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model LoginViewModel
@inject SignInManager<AppUser> SignInManager

@{
    Layout = "";
    ViewData["Title"] = "Login";
}

<head>
    <link href="/css/styles.css" rel="stylesheet" />
    <script src="/lib/font-awesome/js/all.js" crossorigin="anonymous"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
</head>

<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center mb-5">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="UserNameOrEmail" class="form-control" placeholder="example@gmail.com" />
                                            <label asp-for="UserNameOrEmail" class="control-label"></label>
                                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Password" class="form-control" placeholder="Password" />
                                            <label asp-for="Password" class="control-label"></label>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-check mb-3">
                                            <label asp-for="RememberMe">
                                                <input class="form-check-input" asp-for="RememberMe" />
                                                <label class="form-check-label" asp-for="RememberMe" ></label>
                                            </label>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                                            <button type="submit" class="btn btn-primary w-100">Login</button>
                                        </div>
                                    </form>
                                    <div>
                                        <section>
                                            <hr />
                                            @{
                                                <h6 class="text-center">Login With External Services</h6>
                                                var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
                                                var loginProviders = schemes.ToList();
                                                if (loginProviders.Count == 0)
                                                {
                                                    <div>
                                                        <p>
                                                            The Application not supported the external login services
                                                        </p>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                                                        <div class="d-flex flex-row justify-content-between">
                                                            <button type="submit" class="btn btn-primary mt-1 bg-login-google external-size" name="provider" value="Google" title="Log in using your Google account">Google</button>
                                                            <button type="submit" class="btn btn-primary mt-1 bg-login-facebook external-size" name="provider" value="Facebook" title="Log in using your facebook account">Facebook</button>
                                                        </div>
                                                    </form>
                                                }
                                            }
                                        </section>
                                    </div>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <a class="small" asp-action="ForgotPassword">Forgot Passowrd?</a>
                                    <br />
                                    <a class="small" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Need an account? Sign up</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <a asp-controller="Home" asp-action="index" class="text-muted">Back To Home</a>
                        <div>
                            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</body>





@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
