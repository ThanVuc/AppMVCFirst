@model IEnumerable<AppMVC.Models.Product.CategoryProduct>

@{
    ViewData["Title"] = "Categories";
}

@section head {
    <style>
        a {
            text-decoration: none;
        }
    </style>
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slug)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            await RenderCategory(item);
        }
    </tbody>
</table>

@{
    async Task RenderCategory(CategoryProduct item, int level = 0)
    {
        string prefix = string.Concat(Enumerable.Repeat("&nbsp;&nbsp;", level));
        // Render Category
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">
                    @Html.Raw(prefix) @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>

        // Recursion to go through all child
        // with each child, render + continue
        if (item.CategoryChildren.Count > 0)
        {
            foreach (var child in item.CategoryChildren)
            {
                await RenderCategory(child, level + 1);
            }
        }

    }
}
