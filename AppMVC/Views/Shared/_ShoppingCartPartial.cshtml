@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor
@inject CartServices _services;
@using AppMVC.Areas.ProductManage.Services;
@using AppMVC.Areas.ProductManage.Models;

@{
    var session = HttpContextAccessor.HttpContext.Session;
    string jsoncart = session.GetString(_services.GetCarkey());
    if (jsoncart != null)
    {
        var cart = JsonConvert.DeserializeObject<List<CartItem>>(jsoncart);
        <div class="nav-item">
            <a asp-area="ProductManage" asp-controller="ViewProduct" asp-action="ProductCart">Cart(@cart.Count)</a>
        </div>
    }
}
